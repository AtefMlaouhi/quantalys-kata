{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@quantalys-todo/client/data-access": ["libs/client/data-access/src/index.ts"],
      "@quantalys/client/feature-todo-list": [
        "libs/client/feature-todo-list/src/index.ts"
      ],
      "@quantalys/client/ui-components/*": [
        "libs/client/ui-components/src/lib/*"
      ],
      "@quantalys/client/util": ["libs/client/util/src/index.ts"],
      "@quantalys/server/data-access": ["libs/server/data-access/src/index.ts"],
      "@quantalys/server/feature-health": [
        "libs/server/feature-health/src/index.ts"
      ],
      "@quantalys/server/feature-todo": [
        "libs/server/feature-todo/src/index.ts"
      ],
      "@quantalys/server/util": ["libs/server/util/src/index.ts"],
      "@quantalys/server/util/testing": [
        "libs/server/util/src/lib/testing/index.ts"
      ],
      "@quantalys/shared/domain": ["libs/shared/domain/src/index.ts"],
      "@quantalys/shared/util-env": ["libs/shared/util-env/src/index.ts"],
      "@quantalys/shared/util-testing": [
        "libs/shared/util-testing/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
